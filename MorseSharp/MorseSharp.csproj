<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Title>MorseSharp</Title>
    <Authors>p0laris</Authors>
    <Description>A simple lightweight .NET library to convert morse code.</Description>
    <PackageProjectUrl>https://github.com/p6laris/MorseSharp</PackageProjectUrl>
    <RepositoryUrl>https://github.com/p6laris/MorseSharp</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>MorseCode Morse Converter </PackageTags>
    <PackAsTool>True</PackAsTool>
    <NeutralLanguage>en-GB</NeutralLanguage>
    <Copyright>2022</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <IncludeSymbols>False</IncludeSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Serilog" Version="2.12.0" />
    <PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
  </ItemGroup>

</Project>
